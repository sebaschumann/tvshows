<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<form method="input" action="/seasons">
Buscar por temporada: <input type= integer name="filter" />
<input type="submit" />
</form><br>

<form method="input" action="/episodes">
Buscar por titulo: <input type= integer name="filter" />
<input type="submit" />
</form><br>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Emmited at</th>
      <th>Minutes</th>
      <th>Season</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.title %></td>
        <td><%= episode.emmited_at %></td>
        <td><%= episode.minutes %></td>
        <td><%= episode.season.number %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_episode_path %>
